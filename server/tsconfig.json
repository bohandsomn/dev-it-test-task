{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./src/modules/*"]
    },
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
